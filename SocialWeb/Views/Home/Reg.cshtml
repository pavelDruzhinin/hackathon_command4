@{
    ViewBag.Title = "Registration";
}
@*<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>*@

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2 ">
            <form class="form-horizontal form-signin">
                <h4>Заполни данные о себе</h4>

                <div class="form-group">
                    <label for="firstname" class="col-sm-2 control-label">Имя</label>
                    <div class="col-sm-8">
                        <input type="email" class="form-control" id="firstname" placeholder="Имя">
                    </div>
                </div>

                <div class="form-group">
                    <label for="lastname" class="col-sm-2 control-label">Фамилия</label>
                    <div class="col-sm-8">
                        <input type="email" class="form-control" id="lastname" placeholder="Фамилия">
                    </div>
                </div>

                <div class="form-group">
                    <label for="login" class="col-sm-2 control-label">Логин</label>
                    <div class="col-sm-8">
                        <input type="email" class="form-control" id="login" placeholder="Логин">
                    </div>
                </div>

                <div class="form-group">
                    <label for="email" class="col-sm-2 control-label">Почта</label>
                    <div class="col-sm-8">
                        <input type="email" class="form-control" id="email" placeholder="Почта">
                    </div>
                </div>

                <div class="form-group">
                    <label for="password" class="col-sm-2 control-label">Пароль</label>
                    <div class="col-sm-8">
                        <input type="password" class="form-control" id="password" placeholder="Пароль">
                    </div>
                </div>

                <div class="form-group">
                    <label for="pic" class="col-sm-2 control-label">Фото</label>
                    <div class="col-sm-8">
                        <input type="file" id="pic">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-8">
                        <button type="submit" class="btn btn-default">Регистрация</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
